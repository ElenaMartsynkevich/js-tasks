// Task 42:
// Дана строка.  Напишите функцию, которая подсчитывает количество гласных в строке

function alphabetChar(str){
  var vowelList = 'aeiouAEIOU';
  var vcount = 0;
  
  for(var x = 0; x < str.length ; x++) {
    if (vowelList.indexOf(str[x]) !== -1) {
      vcount += 1;
    }
  
  }
  return vcount;

}

console.log(alphabetChar("i like little books"));

