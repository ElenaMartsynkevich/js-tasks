function uniqueChar(str){
  return uniqueChars = Array.from(new Set(str)).join();
  

}

console.log(uniqueChar("i like little books"));

// Task 43:
// Напишите функцию, которая выводит таблицу умножения

function multiplicationTable(){
  var num=0;
   for(var i=1 ;i<10;i++){
       for(var j=1;j<10;j++){
           num=i*j;
           //Если продукт представляет собой однозначную цифру, добавьте два пробела впереди, чтобы сохранить очередь.
           if(num/10<1){
               num=" "+i*j;
           }
           if(j<=i) {
               console.log(j + "*" + i + "=" + num + " ");
           }
       }
       console.log(" ");
   }
  }
  

  // Task 44:
// Напишите функцию, которая эмулирует работу таймера. 
// Т.е выводи в консоль каждую секунду
//    "14:37:44";
//    "14:37:42";
//    "14:37:41";
// На вход передается строка с количеством секунд

function timer(str){
   
  let sec = Number(str.split(":").pop());
  while (sec < 59){
     sec = sec + 1;
     console.log(str.substr(0,6) + sec)
  }
  
  }
console.log(timer("20:17:40"));

