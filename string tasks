//Task 50
/*
Вам дан текст с числами, умноженными на *, в формате {num1} * {num2}. 
Ваша задача состоит в том, чтобы извлечь каждые два числа в приведенном выше формате, 
умножить их и заменить их произведением. 
Первое число целое, может быть отрицательным.
 Второе число является целым числом или числом с плавающей запятой и может быть отрицательным. 
 Вокруг символа «*» могут быть пробелы.
"My bill: 2*2.50 (beer); 2* 1.20 (kepab); -2 * 0.5 (deposit)"  => "My bill: 5 (beer); 2.4 (kepab); -1 (deposit)."
*/

function bill(str){
   
  let array = [...str]
  .map(i => {if(isFinite(i) == true || i == "."){return i}else{return " "}})
  .join("")
  .split(" ")
  .filter(i => i != "")
  .map(i => Number(i))
  let firstN = array.slice(0, 1);
  let secondN = array.slice(1, 2);
  let multiplyN = firstN * secondN;
  let firstN2 = array.slice(2, 3);
  let secondN2 = array.slice(3, 4);
  let multiplyN2 = firstN2 * secondN2;
  let firstN3 = array.slice(4, 5);
  let secondN3 = array.slice(5, 6);
  let multiplyN3 = firstN3 * secondN3;
  console.log(firstN3);
  }
  


console.log(bill("My bill: 2*2.50 (beer); 2* 1.20 (kepab); -2 * 0.5 (deposit)"));

//Task 51
// Напишите функцию, которая будет принимать на вход строку с надписью для гравировки. На выход функция отдает стоимость для гравировки. 
//Если строка пустая или равна undefined, то цена гравировки равна 0. Цена за 1 символ = 2$

function engravingCost(str) {
  if (str.length > 0 ) {
     return str.length
  } else {
     return 0
  }

}
console.log(engravingCost("onetwo"));