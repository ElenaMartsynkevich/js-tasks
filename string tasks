// Task 38:
// Дана строка. Напишите функцию, которая убирает лишнии пробелы из строки.
// Например:  "  Mother   ,  father and . " => "Mother ,  father and."

function spaceDelete(str){
  const trimmedStr = str.trim();
  const withSpace = trimmedStr.replaceAll(/\s+/g, " ");
  const withSpaceBeforeDot = withSpace.replace(/ +(\,)/g, "$1");
  return withSpaceBeforeDot.replace(/ +(\.)/g, "$1")   
}

console.log(spaceDelete("  Mother   ,  father and . "));

