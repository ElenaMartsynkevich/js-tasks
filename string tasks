// Task 31:
// Дана строка. Напишите функцию, которая удаляет определенный символ из строки

function filterString(str, symbol){
  let i = 0;
  let result = '';
  while ( i < str.length) {
     if (str[i] !== symbol) {
        result = `${result}${str[i]}`;
     }
     i++;
  }
  
     return result;
  }
  console.log(filterString("Hel!lO Mike", "k"));

