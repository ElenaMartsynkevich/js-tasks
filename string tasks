// Напишите функцию, которая возвращает количество вхождений слово в строке

function countWordsString(string){

  var counter = 1;
  string=string.replace(/[\s]+/gim, ' ');
  string.replace(/(\s+)/g, function (a) {
     counter++;
  });

  return counter;
}
console.log(countWordsString("HellO Mike"));

