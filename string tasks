// Дано слово. Перенести первые k его букв в конец.

function moveChar(str, number){
  let firstLetters = str.substr(0, number);
  let lastLetters = str.substr(number, str.length);
  return lastLetters + firstLetters; 
   }
console.log(moveChar("Onebigword", 3));

